<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Futbolito.View.Login">
    <StackLayout  HorizontalOptions="Fill" VerticalOptions="Center">
        <StackLayout>
            <Image Source="login_futbol.png" HeightRequest="200" WidthRequest="200 "/>
        </StackLayout>
        <StackLayout >
            <Entry Placeholder="Usuario" Text="{Binding Id}}" HorizontalTextAlignment="Center"/>
            <Entry Placeholder="Contraseña" Text="{Binding Pass}}" IsPassword="True" HorizontalTextAlignment="Center"/>
            <Button Text="Ingresar" Command="{Binding LoginCommand}"/>
            <Button Text="Crear Usuario" Command="{Binding NewUserCommand}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>